{
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:react/recommended",
    "plugin:mdx/recommended"
  ],
  "overrides": [
    {
      "files": [".mdx", ".md"],
      "parser": "eslint-mdx",
      "extends": "plugin:mdx/recommended"
    },
    {
      "files": [".tsx", ".ts"],
      "parser": "eslint-mdx",
      "extends": "plugin:@typescript-eslint/recommended"
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "mdx/code-blocks": true
  },
  "plugins": ["@typescript-eslint", "react"],
  "rules": {}
}
